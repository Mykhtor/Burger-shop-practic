
        <div class="ui stackable grid">
            <!-- Menu column -->
            <div class="twelve wide column">
                <h1>Menu</h1><br>
                <div class="ui four doubling cards">

                    {{#each burgers}}
                    <div class="ui red link card">
                        <div class="content">
                            <div class="header">{{name}}</div>
                        </div>
        
                        <div class="image">
                            <img src="./images/burger1.png">
                        </div>
        
                        <div class="content">
                            <div class="ui fluid left labeled button" tabindex="0">
        
                                <span class="ui basic right pointing label">
                                    {{cost}} UZS
                                </span>
        
