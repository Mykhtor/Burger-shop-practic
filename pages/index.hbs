                                        <i class="ui remove icon"></i>
                                    </a>
                                </div>
                                <!-- Name -->
                                <div class="content">
                                    <div class="cart-item">
                                        Burger
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <h4>Total: 36000 UZS</h4>
                        <div class="ui fluid buttons">
                            <a href="#clear" class="ui button">Clear All</a>
                            <a href="./confirm.html" class="ui positive button">Confirm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
